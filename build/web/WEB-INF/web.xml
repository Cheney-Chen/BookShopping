<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <resource-ref>
        <res-ref-name>jdbc/bookShopping</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <filter>
        <filter-name>UserLoginFilter</filter-name>
        <filter-class>web.UserLoginFilter</filter-class>
        <init-param>
            <param-name>User</param-name>
            <param-value>UserLogin.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UserLoginFilter</filter-name>
        <url-pattern>/ShoppingCarBuy.do</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>addBook</servlet-name>
        <servlet-class>action.AddBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>action.AddBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowBookList</servlet-name>
        <servlet-class>action.ShowBookList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowBookDetail</servlet-name>
        <servlet-class>action.ShowBookDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowBookStore</servlet-name>
        <servlet-class>action.ShowBookStore</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCarBuy</servlet-name>
        <servlet-class>action.ShoppingCarBuy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCarShow</servlet-name>
        <servlet-class>action.ShoppingCarShow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCarClear</servlet-name>
        <servlet-class>action.ShoppingCarClear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCarDelete</servlet-name>
        <servlet-class>action.ShoppingCarDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookShoppingListener</servlet-name>
        <servlet-class>web.BookShoppingListener</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCarPay</servlet-name>
        <servlet-class>action.ShoppingCarPay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCarCheckOut</servlet-name>
        <servlet-class>action.ShoppingCarCheckOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLogin</servlet-name>
        <servlet-class>action.AdminLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>action.UserLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegister</servlet-name>
        <servlet-class>action.UserRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBook</servlet-name>
        <url-pattern>/addBook.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/AddBook.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowBookList</servlet-name>
        <url-pattern>/ShowBookList.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowBookDetail</servlet-name>
        <url-pattern>/ShowBookDetail.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowBookStore</servlet-name>
        <url-pattern>/ShowBookStore.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCarBuy</servlet-name>
        <url-pattern>/ShoppingCarBuy.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCarShow</servlet-name>
        <url-pattern>/ShoppingCarShow.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCarClear</servlet-name>
        <url-pattern>/ShoppingCarClear.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCarDelete</servlet-name>
        <url-pattern>/ShoppingCarDelete.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookShoppingListener</servlet-name>
        <url-pattern>/BookShoppingListener.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCarPay</servlet-name>
        <url-pattern>/ShoppingCarPay.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCarCheckOut</servlet-name>
        <url-pattern>/ShoppingCarCheckOut.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLogin</servlet-name>
        <url-pattern>/AdminLogin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegister</servlet-name>
        <url-pattern>/UserRegister.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
